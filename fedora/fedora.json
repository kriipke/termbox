{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<tab> linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `ks_path`}}<enter><wait>"
      ],
      "boot_wait": "10s",
      "cpus": "{{ user `cpus` }}",
      "disk_cache": "unsafe",
      "disk_compression": true,
      "disk_discard": "unmap",
      "disk_interface": "virtio-scsi",
      "disk_size": "{{user `disk_size`}}",
      "format": "qcow2",
      "headless": "{{user `headless`}}",
      "http_directory": "{{user `http_directory`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "memory": "{{ user `memory` }}",
      "name": "{{user `template`}}",
      "net_device": "virtio-net",
      "output_directory": "{{ user `build_directory` }}/{{ user `template` }}/{{ build_type }}",
      "shutdown_command": "echo '{{user `pam_password`}}'|sudo -S shutdown -P now",
      "ssh_password": "{{user `pam_password`}}",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "{{user `pam_username`}}",
      "type": "qemu",
      "vm_name": "{{user `template`}}"
    },
    {
      "boot_command": [
        "<tab> linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "boot_wait": "10s",
      "cpus": "{{user `cpus`}}",
      "disk_size": "{{user `disk_size`}}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_url": "{{user `guest_additions_url`}}",
      "guest_os_type": "{{user `guest_type_vbox`}}",
      "hard_drive_interface": "sata",
      "headless": "{{user `headless`}}",
      "http_directory": "{{user `http_directory`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_target_path": "{{user `build_directory`}}/../build_cache",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{user `build_directory`}}/{{user `template`}}/{{build_type}}",
      "shutdown_command": "echo '{{user `pam_password`}}'|sudo -S shutdown -P now",
      "ssh_password": "{{user `pam_password`}}",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "{{user `pam_username`}}",
      "type": "virtualbox-iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `template`}}"
    },
    {
      "boot_command": [
        "<tab> linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "boot_wait": "10s",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "{{user `guest_type_vmware`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "{{user `http_directory`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `template` }}/{{ build_type }}",
      "shutdown_command": "echo '{{user `pam_password`}}'|sudo -S shutdown -P now",
      "ssh_password": "{{user `pam_password`}}",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "{{user `pam_username`}}",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vm_name": "{{user `template`}}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "ethernet0.pciSlotNumber": "32"
      },
      "vmx_remove_ethernet_interfaces": true
    },
    {
      "boot_command": [
        "<tab> linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "boot_wait": "10s",
      "cpus": "{{user `cpus`}}",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "{{user `guest_type_parallels`}}",
      "http_directory": "{{user `http_directory`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `template` }}/{{ build_type }}",
      "parallels_tools_flavor": "lin",
      "prlctl_version_file": ".prlctl_version",
      "shutdown_command": "echo '{{user `pam_password`}}'|sudo -S shutdown -P now",
      "ssh_password": "{{user `pam_password`}}",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "{{user `pam_username`}}",
      "type": "parallels-iso",
      "vm_name": "{{user `template`}}"
    },
    {
      "boot_command": [
        "<tab> linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "boot_wait": "10s",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "{{user `http_directory`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_target_path": "{{ user `iso_target_path` }}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `template` }}/{{ build_type }}",
      "shutdown_command": "echo '{{user `pam_password`}}'|sudo -S shutdown -P now",
      "ssh_password": "{{user `pam_password`}}",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "{{user `pam_username`}}",
      "type": "qemu",
      "vm_name": "{{user `template`}}"
    }
  ],
  "post-processors": [
    {
      "output": "{{ user `build_directory` }}/{{user `box_basename`}}-{{user `os`}}-{{user `arch`}}.{{.Provider}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "HOME_DIR=/home/{{user `pam_username`}}"
      ],
      "execute_command": "echo '{{user `pam_password`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "{{template_dir}}/scripts/swap.sh",
        "{{template_dir}}/scripts/fix-slow-dns.sh",
        "{{template_dir}}/scripts/build-tools.sh",
        "{{template_dir}}/scripts/install-supporting-packages.sh",
        "{{template_dir}}/scripts/base_packages.sh",
        "{{template_dir}}/../_common/sshd.sh",
        "{{template_dir}}/../_common/vmware.sh",
        "{{template_dir}}/../_common/parallels.sh",
        "{{template_dir}}/../_common/vagrant.sh",
        "{{template_dir}}/../_common/configure_xdg_dirs.sh",
        "{{template_dir}}/../_common/configure_linux_vt.sh",
        "{{template_dir}}/../_common/provii_binaries.sh",
        "{{template_dir}}/../_common/vim.sh",
        "{{template_dir}}/../_common/virtualbox.sh",
        "{{template_dir}}/scripts/cleanup.sh",
        "{{template_dir}}/../_common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "arch": "",
    "box_basename": "o0zi",
    "build_directory": "{{template_dir}}/../_builds/v{{user `git_revision`}}",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "cpus": "2",
    "disk_size": "40000",
    "git_revision": "0.1.0",
    "guest_additions_url": "",
  	"vbox_guest_type": "",
    "headless": "false",
    "http_directory": "{{template_dir}}/http",
    "iso_checksum": "",
    "iso_checksum_type": "",
    "iso_name": "",
    "ks_path": "ks-fedora.cfg",
    "memory": "2048",
    "mirror": "",
    "mirror_directory": "",
    "os": "",
    "pam_username": "vagrant",
    "pam_password": "vagrant",
    "packer_file_upload_target": "/tmp",
    "template": "o0zi-v{{user `git_revision`}}-{{user `os`}}-{{user `arch`}}",
    "git_server_key": "{{env `git_server_key`}}"
  }
}
